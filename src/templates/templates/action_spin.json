{
    "template_id": "action_spin",
    "anchor_verbs": [
        "spin",
        "rotate",
        "twirl",
        "whirl",
        "pirouette"
    ],
    "verbnet_class": "roll-51.3.1",
    "thematic_roles": {
        "agent": "subject"
    },
    "description": "Rotation around vertical axis",
    "whole_body": {
        "primitive": "rigid_rotate",
        "params": {
            "pivot": [
                0,
                0,
                0
            ],
            "axis": [
                0,
                1,
                0
            ],
            "amplitude": 0.8,
            "frequency": "{{speed * 1.0}}"
        }
    },
    "part_rules": [
        {
            "match": "*_arm OR arm* OR *wing*",
            "primitive": "oscillate_bend",
            "params": {
                "axis": [
                    0,
                    0,
                    1
                ],
                "amplitude": 0.2,
                "frequency": "{{speed * 0.5}}",
                "phase": 0
            },
            "attachment_behavior": "gradient"
        }
    ],
    "defaults": {
        "speed": 1.0,
        "adverb_map": {
            "slowly": {
                "speed": 0.3
            },
            "quickly": {
                "speed": 3.0
            },
            "furiously": {
                "speed": 4.0,
                "amplitude_scale": 1.5
            },
            "gracefully": {
                "speed": 0.5,
                "amplitude_scale": 0.7
            },
            "gently": {
                "speed": 0.3,
                "amplitude_scale": 0.5
            },
            "wildly": {
                "speed": 4.0,
                "amplitude_scale": 2.0
            }
        }
    }
}