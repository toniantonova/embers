{
    "template_id": "locomotion_biped",
    "anchor_verbs": [
        "walk",
        "stride",
        "march",
        "step",
        "stroll"
    ],
    "verbnet_class": "run-51.3.2",
    "thematic_roles": {
        "agent": "subject",
        "path": "preposition_object"
    },
    "description": "Two-legged walking with alternating leg swing and body sway",
    "whole_body": {
        "primitive": "oscillate_translate",
        "params": {
            "direction": [
                0,
                1,
                0
            ],
            "amplitude": 0.02,
            "frequency": "{{speed * 1.5}}",
            "phase": 0
        }
    },
    "part_rules": [
        {
            "match": "*_leg OR *_foot OR leg*",
            "primitive": "oscillate_bend",
            "params": {
                "axis": [
                    1,
                    0,
                    0
                ],
                "amplitude": 0.2,
                "frequency": "{{speed * 1.0}}",
                "phase": "{{index * 0.5}}"
            },
            "attachment_behavior": "gradient"
        },
        {
            "match": "*_arm OR arm*",
            "primitive": "oscillate_bend",
            "params": {
                "axis": [
                    1,
                    0,
                    0
                ],
                "amplitude": 0.1,
                "frequency": "{{speed * 1.0}}",
                "phase": "{{index * 0.5 + 0.25}}"
            },
            "attachment_behavior": "gradient"
        },
        {
            "match": "head",
            "primitive": "oscillate_translate",
            "params": {
                "direction": [
                    0,
                    1,
                    0
                ],
                "amplitude": 0.01,
                "frequency": "{{speed * 1.5}}",
                "phase": 0.1
            }
        }
    ],
    "defaults": {
        "speed": 0.8,
        "adverb_map": {
            "slowly": {
                "speed": 0.3
            },
            "quickly": {
                "speed": 1.8
            },
            "furiously": {
                "speed": 2.0,
                "amplitude_scale": 1.5
            },
            "gracefully": {
                "speed": 0.5,
                "amplitude_scale": 0.6
            },
            "gently": {
                "speed": 0.4
            },
            "wildly": {
                "speed": 2.0,
                "amplitude_scale": 1.8
            }
        }
    }
}